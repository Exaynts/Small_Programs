// if two Hamsters can't be feed by one bucket
#include <iostream>
#include <vector>
#include <string>
using namespace std;

int IsPossible(string Hamsters) {
    int Hsize = Hamsters.size();
    int buckets = 0;
    for (int i = 0; i < Hsize; i++) {
        if (Hamsters[i] == 'H') {
            if (i > 0 and Hamsters[i - 1] == '.') {
                Hamsters[i - 1] = 'b';
                buckets += 1;
            }
            else if (i+1 == Hsize or Hamsters[i + 1] == 'H') {
                return -1;
            }
            else {
                Hamsters[i + 1] = 'b';
                buckets += 1;
            }
        }
    }
    return buckets;
}

int main() {
    string Hamsters = "H...H.HH..H";
    cout << IsPossible(Hamsters);
    return 0;
}
