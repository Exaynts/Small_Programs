// if two Hamsters can be feed by one bucket
#include <iostream>
#include <vector>
#include <string>
using namespace std;

int minimumBuckets(string Hamsters) {
    int Hsize = Hamsters.size();
    int buckets = 0;
    for (int i = 0; i < Hsize; i++) {
        if (Hamsters[i] == 'H') {
            if (i+2 < Hsize and Hamsters[i + 2] == 'H' and Hamsters[i + 1] == '.') { // Два хомячка сидят через раз
                buckets += 1;
                i += 2;
            }
            else if (i > 0 and Hamsters[i-1] == '.') {
                buckets += 1;
            }
            else if (i+1 < Hsize and Hamsters[i + 1] == '.') {
                buckets += 1;
            }
            else {
                return -1;
            }
        }
    }
    return buckets;
}

int main() {
    string Hamsters = "H...H.HH..H";
    cout << minimumBuckets(Hamsters);
    return 0;
}
