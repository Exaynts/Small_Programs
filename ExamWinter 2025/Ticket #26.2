	int b;  cout << "b = "; cin >> b;
	vector<vector<int>> Num(a, vector <int>(b));
	// Ввод заданного значения k
	int k;
	cout << "Заданное число k = ";
	cin >> k;
	// Заполнение массива
	Input(Num, a, b);
	// Вычисление искомой суммы
	Sum(Num, a, b, k);
	return 0;
}
