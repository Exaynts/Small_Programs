#include <iostream>
#include <string>
using namespace std;


const int moutains_number = 5;//Кол-во вводимых горных вершин
int main() {
	typedef struct Mountains {
		string nametop;
		float height;
	} mountain;
	mountain* mountains = new mountain[moutains_number];
	//Ввод информации о горных вершинах
	for (int i = 0; i < moutains_number; i++) {
		cout << endl << "Top name: ";
		cin >> mountains[i].nametop;
		cout << "Its height: ";
		cin >> mountains[i].height;
	}
	// Определяем среднее значение вершин гор
	float sum = 0;
	for (int i = 0; i < moutains_number; i++) {
		sum += mountains[i].height;
	}
	float average_height = sum / moutains_number;
	cout << "Average height is " << average_height << endl;
	// Вывод названий вершин выше среднего
	for (int i = 0; i < moutains_number; i++) {
		if (mountains[i].height > average_height)
			cout << mountains[i].nametop << endl;
	}
	return 0;
}
